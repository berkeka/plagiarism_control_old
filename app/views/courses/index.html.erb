<div>
    <div class="flex justify-between items-center">
        <h1 class="text-lg">My Courses</h1>
        <div class="actions">
            <%= link_to 'Add a course', new_course_url, class: 'btn btn-main' %>
        </div>
    </div>
    <div class="container mx-auto grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-5 py-2">
        <% @courses.each do |course| %>
            <%= render 'course_card', course: course %>
        <% end %>
    </div>
</div>
