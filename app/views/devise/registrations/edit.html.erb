<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-control w-full max-w-xs">
    <%= f.label :email, class: 'label label-text' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input input-bordered w-full max-w-xs' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-control w-full max-w-xs">
    <%= f.label :password, class: 'label label-text' %> 
    <%= f.password_field :password, autocomplete: "new-password", class: 'input input-bordered w-full max-w-xs' %>
    <label class="label">
      <% if @minimum_password_length %>
        <label class='label label-text-alt'><em><%= @minimum_password_length %> characters minimum</em></label>
      <% end %>
    </label>
  </div>

  <% if @is_github_linked %>
    Github Account Linked 
    <a href="<%= oauth2_revoke_url %>">
      <button class="btn btn-sm btn-circle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="4" d="M6 18L18 6M6 6l12 12" /></svg>
      </button>
    </a>
    <a href="<%= auth_url %>">
      <button class="btn btn-sm btn-circle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" stroke="currentColor" fill="currentColor" viewBox="0 0 128 128" width="48px" height="48px"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="4" d="M64 1C46.1 1 28.9 8.8 17 22.1V5c0-1.7-1.3-3-3-3s-3 1.3-3 3v25c0 1.7 1.3 3 3 3h25c1.7 0 3-1.3 3-3s-1.3-3-3-3H20.6C31.5 14.2 47.1 7 64 7c31.4 0 57 25.6 57 57 0 1.7 1.3 3 3 3s3-1.3 3-3C127 29.3 98.7 1 64 1zM114 95H89c-1.7 0-3 1.3-3 3s1.3 3 3 3h18.3c-10.9 12.8-26.4 20-43.3 20C32.6 121 7 95.4 7 64c0-1.7-1.3-3-3-3s-3 1.3-3 3c0 34.7 28.3 63 63 63 17.9 0 35.1-7.8 47-21.1V123c0 1.7 1.3 3 3 3s3-1.3 3-3V98C117 96.3 115.7 95 114 95z"/></svg></button>
      <br>
    </a>
  <% else %>
    <%= link_to "Connect your Github", auth_url, class: 'btn btn-md' %>
  <% end %>
  

  <div class="field form-control w-full max-w-xs">
    <%= f.label :password_confirmation, class: 'label label-text' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input input-bordered w-full max-w-xs' %>
  </div>

  <div class="field form-control w-full max-w-xs">
    <%= f.label :current_password, class: 'label label-text' %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'input input-bordered w-full max-w-xs' %>
    <label class='label label-text-alt'><i>(we need your current password to confirm your changes)</i></label> 
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-ghost' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-ghost' %></p>

<%= link_to "Back", :back, class: 'link' %>


<br>
